<article class="blog-item p-3 mb-4">
    <!-- Title -->
    <a href="<%- config.root %><%- item.path %>">
        <h2 class="blog-post-title">
            <%- item.title %>
        </h2>
        <% if(item.subtitle) { %>
        <h3>
            <%- item.subtitle %>
        </h3>
        <% } %>
    </a>
    <!-- Date and Author -->
    <p class="blog-post-meta">
        <%= item.date.format(config.date_format) %>
        <% if(item.author) { %>
        by <%- item.author %>
        <% } %>
    </p>
</article>